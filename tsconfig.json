{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",

    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",

    "removeComments": true,
    "sourceMap": false
  },
  "exclude": [
    "node_modules",
    "typings/browser",
    "typings/browser.d.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
